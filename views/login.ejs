<!DOCTYPE html>
<html lang="pl">
  <%- include('templates/header') %>
  <body>
    <%- include('templates/navbar') %><%- include('templates/toast') %>

    <div class="container-fluid">
      <div class="row mt-5">
        <div class="col-4"></div>
        <div class="col-4 mt-5 login-box">
          <div class="row">
            <form
              action="/login"
              method="post">
              <div class="col-12 mt-3">
                <label for="login">Login</label>
                <input
                  id="login"
                  name="login"
                  type="text" />
              </div>

              <div class="col-12 mt-3">
                <label for="password">Hasło</label>
                <input
                  type="password"
                  id="password"
                  name="password" />
              </div>

              <div class="col-12 mt-3 mb-3">
                <button type="submit">Zaloguj się</button>
              </div>
            </form>
          </div>
        </div>
        <div class="col-4"></div>
      </div>
    </div>
  </body>
</html>
